<Pane prefHeight="450.0" prefWidth="600.0" style="-fx-background-color: #302e2b;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.onlinechessgame.controllers.HomeController">
   <children>
      <Pane fx:id="homePane" prefHeight="445.0" prefWidth="600.0">
         <children>
            <Button layoutX="150.0" layoutY="202.0" mnemonicParsing="false" onAction="#matching" prefHeight="68.0" prefWidth="302.0" style="-fx-pref-width: 300px;" styleClass="button-Login" stylesheets="@../style/style.css" text="Play Online">
               <graphic>
                  <ImageView fitHeight="61.0" fitWidth="50.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../Images/play.png" />
                     </image>
                  </ImageView>
               </graphic></Button>
            <Button disable="true" layoutX="150.0" layoutY="304.0" mnemonicParsing="false" prefHeight="41.0" prefWidth="156.0" style="-fx-background-color: #454341; -fx-pref-width: 300px;" styleClass="button-Login" stylesheets="@../style/style.css" text="Play Computer" textFill="#c5c5c5">
               <graphic>
                  <ImageView fitHeight="49.0" fitWidth="50.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../Images/Chatbot.png" />
                     </image>
                  </ImageView>
               </graphic></Button>
            <ImageView fitHeight="50.0" fitWidth="62.0" layoutX="14.0" layoutY="14.0" onMouseClicked="#showProfilePane" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../Images/avatar.jpg" />
               </image>
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
               <effect>
                  <Lighting bumpInput="$null" diffuseConstant="1.39" light="$null" specularConstant="0.0" specularExponent="40.0" surfaceScale="10.0" />
               </effect>
            </ImageView>
            <ImageView disable="true" fitHeight="150.0" fitWidth="237.0" layoutX="225.0" layoutY="10.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../Images/logo.png" />
               </image>
            </ImageView>
         </children>
      </Pane>
      <Pane fx:id="waitingPane" layoutX="127.0" layoutY="202.0" prefHeight="183.0" prefWidth="356.0" style="-fx-background-color: green; -fx-border-radius: 20px; -fx-border-width: 2px; -fx-border-color: black; -fx-background-radius: 25px;" visible="false">
         <children>
            <Label layoutX="78.0" layoutY="14.0" prefHeight="30.0" prefWidth="200.0" text="Wait for player..." textFill="WHITE">
               <font>
                  <Font name="Arial Bold" size="25.0" />
               </font>
            </Label>
            <ProgressBar fx:id="progressBar" layoutX="77.0" layoutY="60.0" prefWidth="200.0" progress="0.0" />
            <Label fx:id="timerLabel" layoutX="116.0" layoutY="78.0" prefHeight="39.0" prefWidth="125.0" text="00:00:20" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="27.0" />
               </font>
            </Label>
            <Button layoutX="119.0" layoutY="115.0" mnemonicParsing="false" onAction="#cancelMatching" prefHeight="46.0" prefWidth="104.0" style="-fx-background-radius: 5px; -fx-background-color: transparent; -fx-border-color: #302e2b; -fx-border-radius: 8px; -fx-border-width: 2px;" stylesheets="@../style/style.css" text="Cancel" textFill="WHITE">
               <font>
                  <Font size="23.0" />
               </font>
            </Button>
         </children>
      </Pane>
      <VBox fx:id="profilePane" prefHeight="445.0" prefWidth="600.0" visible="false">
         <children>
            <ImageView fitHeight="48.0" fitWidth="60.0" onMouseClicked="#backToHome" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../Images/Left.png" />
               </image>
               <VBox.margin>
                  <Insets left="10.0" top="10.0" />
               </VBox.margin>
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
            </ImageView>
            <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="100.0" style="-fx-border-width: 1px 0px 1px 0px;" styleClass="Hbox" stylesheets="@../style/style.css">
               <children>
                  <Label prefHeight="30.0" prefWidth="515.0" text="Profile Picture" />
                  <Button mnemonicParsing="false" prefHeight="108.0" prefWidth="89.0" style="-fx-background-color: transparent;">
                     <graphic>
                        <ImageView fitHeight="100.0" fitWidth="100.0" pickOnBounds="true">
                           <image>
                              <Image url="@../Images/avatar.jpg" />
                           </image>
                        </ImageView>
                     </graphic>
                  </Button>
               </children>
            </HBox>
            <HBox alignment="CENTER_RIGHT" prefHeight="50.0" styleClass="Hbox" stylesheets="@../style/style.css">
               <children>
                  <Label prefHeight="30.0" prefWidth="104.0" text="Username:" />
                  <Label fx:id="userUsernameLabel" alignment="CENTER_RIGHT" prefHeight="30.0" prefWidth="460.0" text="player Username">
                     <HBox.margin>
                        <Insets right="20.0" />
                     </HBox.margin></Label>
               </children>
            </HBox>
            <HBox alignment="CENTER_RIGHT" prefHeight="50.0" styleClass="Hbox" stylesheets="@../style/style.css">
               <children>
                  <Label prefHeight="30.0" prefWidth="78.0" text="Email" />
                  <Label fx:id="userEmailLabel" alignment="CENTER_RIGHT" prefHeight="30.0" prefWidth="487.0" text="player Email">
                     <HBox.margin>
                        <Insets right="20.0" />
                     </HBox.margin></Label>
               </children>
            </HBox>
            <HBox alignment="CENTER_RIGHT" prefHeight="50.0" styleClass="Hbox" stylesheets="@../style/style.css">
               <children>
                  <Label prefHeight="30.0" prefWidth="66.0" text="Point" />
                  <Label fx:id="userPointLabel" alignment="CENTER_RIGHT" prefHeight="30.0" prefWidth="497.0" text="player point">
                     <HBox.margin>
                        <Insets right="20.0" />
                     </HBox.margin></Label>
               </children>
            </HBox>
            <HBox alignment="CENTER_LEFT" onMouseClicked="#showHistoryPane" prefHeight="50.0" styleClass="Hbox" stylesheets="@../style/style.css">
               <children>
                  <Label prefHeight="17.0" prefWidth="270.0" text="History">
                     <padding>
                        <Insets left="17.0" />
                     </padding></Label>
                  <Label />
               </children>
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
            </HBox>
            <HBox alignment="CENTER_LEFT" prefHeight="50.0" styleClass="Hbox" stylesheets="@../style/style.css">
               <children>
                  <Label prefHeight="17.0" prefWidth="270.0" text="Password">
                     <padding>
                        <Insets left="17.0" />
                     </padding></Label>
                  <Label />
               </children>
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
            </HBox>
            <HBox alignment="CENTER" prefHeight="55.0" prefWidth="600.0">
               <children>
                  <Button alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#logout" prefHeight="51.0" prefWidth="157.0" styleClass="log-out" stylesheets="@../style/style.css" text="LOG OUT" textFill="WHITE">
                     <font>
                        <Font name="System Bold" size="24.0" />
                     </font>
                     <HBox.margin>
                        <Insets top="3.0" />
                     </HBox.margin>
                  </Button>
               </children>
            </HBox>
         </children>
      </VBox>
      <Pane fx:id="historyPane" prefHeight="450.0" prefWidth="600.0" visible="false">
         <children>
            <ImageView fitHeight="48.0" fitWidth="60.0" layoutX="10.0" layoutY="10.0" onMouseClicked="#backToHome" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../Images/Left.png" />
               </image>
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
            </ImageView>
            <ScrollPane fx:id="historyScrollPane" layoutY="62.0" prefHeight="389.0" prefWidth="600.0" stylesheets="@../style/style.css">
               <content>
                  <VBox fx:id="containerHistoryItemVbox" prefHeight="389.0" prefWidth="600.0" spacing="10.0" styleClass="historyVbox" stylesheets="@../style/style.css" />
               </content></ScrollPane>
         </children>
      </Pane>
   </children>
</Pane>
